{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "app/**/*",
    ".storybook/**/*",
    "types/**/*",
    "app.config.ts",
    "eslint.config.mts"
  ]
}
